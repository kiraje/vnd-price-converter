{
  "manifest_version": 3,
  "name": "VND Price Converter",
  "version": "1.1.4",
  "description": "Automatically converts USD prices to Vietnamese Dong (VND) on any webpage with live exchange rates.",
  "permissions": ["storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VND Price Converter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
